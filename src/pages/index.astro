---
import Layout from "../layouts/Layout.astro";
import Home from "../components/Home.jsx";
import About from "../components/About.jsx";
import Work from "../components/Work";
import Projects from "../components/Projects";
---

<Layout title="Gopal Kaul | Home">
  <div
    class="snap-y h-screen w-full no-scrollbar snap-mandatory snap-always scroll-smooth overflow-y-scroll"
  >
    <div class="snap-start h-screen">
      <Home client:visible />
    </div>
    <section id="about" class="snap-start h-screen"><About /></section>
    <section id="experience" class="snap-start">
      <Work client:visible />
    </section>
    <section id="projects" class="snap-start">
      <Projects client:visible />
      </section>
  </div>
  <style>
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }
    .no-scrollbar {
      -ms-overflow-style: none; 
      scrollbar-width: none; 
    }
  </style>
</Layout>
